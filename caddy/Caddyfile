
www.thisisan.app {
  redir https://thisisan.app
}

thisisan.app {
  root * /srv/
  file_server  
  tls {
    dns digitalocean {env.DO_AUTH_TOKEN}
  }
  handle_errors {
    @404 {
      expression {http.error.status_code} == 404
    }
    rewrite @404 /404.html
    file_server
  }
}

*.thisisan.app {
  redir https://thisisan.app/studies/{labels.2}
  tls {
      dns digitalocean {env.DO_AUTH_TOKEN}
    }
  }
}
